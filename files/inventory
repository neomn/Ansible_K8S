## Configure 'ip' variable to bind kubernetes services on a
## different ip than the default iface

admin1    ansible_host=5.42.95.45       ansible_user=ansible  ansible_ssh_port="{{ custom_ssh_port }}"  ip=5.42.95.45    
admin2    ansible_host=77.232.142.121   ansible_user=ansible  ansible_ssh_port="{{ custom_ssh_port }}"  ip=77.232.142.121
admin3    ansible_host=5.42.84.28       ansible_user=ansible  ansible_ssh_port="{{ custom_ssh_port }}"  ip=5.42.84.28
worker1   ansible_host=77.232.142.146   ansible_user=ansible  ansible_ssh_port="{{ custom_ssh_port }}"  ip=77.232.142.146
worker2   ansible_host=5.42.83.254      ansible_user=ansible  ansible_ssh_port="{{ custom_ssh_port }}"  ip=5.42.83.254   


[kube_control_plane]
admin1
admin2
admin3


[etcd]
admin1


[kube_node]
worker1
worker2


[k8s_cluster:children]
kube_node
kube_control_plane
